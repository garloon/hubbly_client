<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Hubbly.Mobile.ViewModels"
             x:Class="Hubbly.Mobile.Views.AboutPage"
             x:DataType="viewmodels:AboutViewModel"
             Title="{Binding AboutTitle}"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label Text="{Binding AboutTitle}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource TextColor}" />
            <BoxView HeightRequest="1"
                     Color="{DynamicResource BorderColor}" />
        </VerticalStackLayout>

        <!-- Content -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="20" Padding="0,20,0,0">

                <!-- App Icon & Name -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                       BorderColor="{DynamicResource BorderColor}"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="False"
                       HorizontalOptions="Center"
                       WidthRequest="200">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Image Source="appicon.svg"
                               WidthRequest="80"
                               HeightRequest="80"
                               HorizontalOptions="Center" />
                        <Label Text="{Binding AboutAppName}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalTextAlignment="Center" />
                        <Label Text="{Binding VersionText}"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Description -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                       BorderColor="{DynamicResource BorderColor}"
                       CornerRadius="12"
                       Padding="15"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding AboutDescription}"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"
                               LineBreakMode="WordWrap"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Links -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                       BorderColor="{DynamicResource BorderColor}"
                       CornerRadius="12"
                       Padding="15"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="15">

                        <!-- Terms of Service -->
                        <Button Text="{Binding Terms}"
                                Command="{Binding OpenTermsCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource PrimaryColor}"
                                BorderWidth="0"
                                HorizontalOptions="Center"
                                FontSize="14" />

                        <!-- Privacy Policy -->
                        <Button Text="{Binding Privacy}"
                                Command="{Binding OpenPrivacyCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource PrimaryColor}"
                                BorderWidth="0"
                                HorizontalOptions="Center"
                                FontSize="14" />

                    </VerticalStackLayout>
                </Frame>

                <!-- Build Info -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                       BorderColor="{DynamicResource BorderColor}"
                       CornerRadius="12"
                       Padding="15"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Build Information"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource TextColor}" />
                        <Label Text="Framework: .NET MAUI"
                               FontSize="12"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Text="Backend: Hubbly API"
                               FontSize="12"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        <Label Text="© 2025 Hubbly"
                               FontSize="12"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer -->
        <VerticalStackLayout Grid.Row="2"
                             Spacing="5"
                             HorizontalOptions="Center"
                             Padding="0,10,0,0">
            <Label Text="Made with ❤️ by Hubbly Team"
                   FontSize="12"
                   TextColor="{DynamicResource SecondaryTextColor}"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>
