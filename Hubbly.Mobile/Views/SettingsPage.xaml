<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Hubbly.Mobile.ViewModels"
             xmlns:converters="clr-namespace:Hubbly.Mobile.Converters"
             xmlns:components="clr-namespace:Hubbly.Mobile.Components"
             x:Class="Hubbly.Mobile.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="{Binding SettingsTitle}"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BooleanToThemeNameConverter x:Key="BooleanToThemeNameConverter" />
            <converters:BooleanToLanguageNameConverter x:Key="BooleanToLanguageNameConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="MainGrid" RowDefinitions="Auto,*" Padding="{StaticResource SpacingMd}">

        <!-- PageHeader Component -->
        <components:PageHeader Grid.Row="0"
                               Title="{Binding SettingsTitle}"
                               ShowMenuButton="False"
                               ToggleFlyoutCommand="{Binding ToggleFlyoutCommand}"
                               ShowActionButton="True"
                               ActionButtonText="←"
                               ActionCommand="{Binding GoBackCommand}"
                               Margin="{StaticResource SpacingSm}" />

        <!-- Settings Content -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="{StaticResource SpacingMd}">

                <!-- Theme Section -->
                <components:Card Title="{Binding ThemeLabel}"
                                 ShowTitle="True"
                                 ShowSeparator="False"
                                 Margin="{StaticResource SpacingSm}">
                    <VerticalStackLayout Spacing="{StaticResource SpacingMd}">

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="{StaticResource SpacingMd}">
                            <!-- Theme Label -->
                            <Label Grid.Column="0"
                                   Text="{Binding IsDarkTheme, Converter={StaticResource BooleanToThemeNameConverter}}"
                                   FontSize="16"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   VerticalOptions="Center" />

                            <!-- Theme Toggle -->
                            <Grid Grid.Column="1"
                                  VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Light Option -->
                                <Label Grid.Column="0"
                                       Text="{Binding LightTheme}"
                                       FontSize="14"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       VerticalOptions="Center"
                                       Margin="8,0,16,0" />

                                <!-- Switch -->
                                <Switch Grid.Column="1"
                                        IsToggled="{Binding IsDarkTheme}"
                                        OnColor="{DynamicResource PrimaryColor}"
                                        VerticalOptions="Center" />

                                <!-- Dark Option -->
                                <Label Grid.Column="2"
                                       Text="{Binding DarkTheme}"
                                       FontSize="14"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       VerticalOptions="Center"
                                       Margin="16,0,0,0" />
                            </Grid>
                        </Grid>

                    </VerticalStackLayout>
                </components:Card>

                <!-- Language Section -->
                <components:Card Title="{Binding LanguageLabel}"
                                 ShowTitle="True"
                                 ShowSeparator="False"
                                 Margin="{StaticResource SpacingSm}">
                    <VerticalStackLayout Spacing="{StaticResource SpacingMd}">

                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="{StaticResource SpacingMd}">
                            <!-- Current Language -->
                            <Label Grid.Column="0"
                                   Text="{Binding CurrentLanguage, Converter={StaticResource BooleanToLanguageNameConverter}}"
                                   FontSize="16"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   VerticalOptions="Center" />

                            <!-- Language Buttons -->
                            <HorizontalStackLayout Grid.Column="1"
                                                   Spacing="{StaticResource SpacingSm}">
                                <Button Text="{Binding Russian}"
                                        Command="{Binding SetRussianCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        FontSize="14"
                                        IsEnabled="{Binding IsRussian}" />

                                <Button Text="{Binding English}"
                                        Command="{Binding SetEnglishCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        FontSize="14"
                                        IsEnabled="{Binding IsEnglish}" />
                            </HorizontalStackLayout>
                        </Grid>

                    </VerticalStackLayout>
                </components:Card>

                <!-- App Info Section -->
                <components:Card Title="{Binding AboutAppName}"
                                 ShowTitle="True"
                                 ShowSeparator="False"
                                 Margin="{StaticResource SpacingSm}">
                    <VerticalStackLayout Spacing="{StaticResource SpacingMd}">

                        <Label Text="{Binding VersionText}"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}" />

                        <Label Text="{Binding AboutDescription}"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"
                               LineBreakMode="WordWrap" />

                    </VerticalStackLayout>
                </components:Card>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer -->
        <VerticalStackLayout Grid.Row="2"
                             Spacing="5"
                             HorizontalOptions="Center"
                             Padding="{StaticResource SpacingMd}">
            <Label Text="© 2025 Hubbly"
                   FontSize="12"
                   TextColor="{DynamicResource SecondaryTextColor}"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>
